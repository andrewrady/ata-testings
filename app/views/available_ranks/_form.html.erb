<%= form_with(model: rank, local: true) do |form| %>
  <% if rank.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rank.errors.count, "error") %> prohibited this rank from being saved:</h2>

      <ul>
      <% rank.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group">
      <div class="form-row">  
        <div class="col">
          <%= form.label :name %>
          <%= form.text_field :name, :class => "form-control", placeholder: 'Name' %>
        </div>
        <div class="col">
          <%= form.label :order %>
          <%= form.number_field :order, :class => "form-control", placeholder: 'Name' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="form-row">  
        <div class="col">
          <%= form.label :rankType, "Rank Type" %>
          <%= form.select :rankType, options_for_select(['Standard', 'Tigers']), {}, { :class => "form-control" } %>
        </div>
        <div class="col"></div>
      </div>
    </div>
    <%= form.submit 'Submit', :class => "btn btn-primary" %>
  </div>
<% end %>
