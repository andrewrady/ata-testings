<%= form_with(model: testing, local: true) do |form| %>
  <% if testing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(testing.errors.count, "error") %> prohibited this testing from being saved:</h2>

      <ul>
      <% testing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= form.date_field :date, :class => "form-control", placeholder: "Date" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= form.select :status, options_for_select({"Active" => "true", "Inactive" => "false"}), {}, { class: "form-control" }%>
        </div>
        <div class="col">
          <%= form.text_field :location, :class => "form-control", placeholder: "Location" %>
        </div>
      </div>
    </div>

    <%= form.submit 'Submit', :class => "btn btn-primary" %>
  </div>
<% end %>
