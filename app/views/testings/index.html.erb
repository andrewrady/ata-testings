<h1>Testings</h1>

<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Status</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col"8>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @testings.each do |testing| %>
      <tr>
        <td scope="col"><%= testing.date.strftime("%m/%d/%Y") %></td>
        <td><%= testing.status ? "Active" : "Inactive" %></td>
        <td><%= link_to 'Show', testing %></td>
        <td><%= link_to 'Edit', edit_testing_path(testing) %></td>
        <td><%= link_to 'Delete', testing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testing', new_testing_path, :class => "btn btn-primary" %>
