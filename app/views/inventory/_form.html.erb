  <% if @inventory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inventory.errors.count, "error") %> prohibited this testing from being saved:</h2>

      <ul>
      <% @inventory.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= form.text_field :name, :class => "form-control", placeholder: "Name" %>
        </div>
        <div class="col">
          <%= form.text_field :distributor, :class => "form-control", placeholder: "distributor" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= form.text_field :cost, :class => "form-control", placeholder: "Cost" %>
        </div>
        <div class="col">
          <%= form.text_field :price, :class => "form-control", placeholder: "Price" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="form-row">
        <div class="col">
          <%= form.number_field :amount, :class => "form-control", placeholder: "Amount" %>
        </div>
        <div class="col">
          <div class="form-check">
          <%= form.check_box :tax, :class => "form-check-input" %>
          <%= form.label :tax, "Tax", :class => "form-check-label" %>
        </div>
      </div>
    </div>

    <%= form.submit 'Submit', :class => "btn btn-primary" %>
  </div>